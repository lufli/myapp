 <div class="container">
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @product do |f| %>
        <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, :class =>'form-control' %>
        <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class =>'form-control' %>
        </div>
        <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, :step => "0.01", :class => 'form-control', :placeholder => @product.price %>
        </div>
        <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, :class => 'form-control', :placeholder => @product.description %>
        </div> 

        <div class="form-group text-center">
        <%= f.submit "Update", class: "btn btn-success col-md-5" %>
        <span class="col-md-2"></span>
        <%= link_to "Cancel", mywork_path, :method => :get, class: "btn btn-danger col-md-5" %>
        </div>
      <% end %>