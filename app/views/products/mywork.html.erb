  <div class="container">
    <h1> <i class="fa fa-shopping-cart"></i> My Works </h1>
    <div class"row">
      <%= link_to "Delete", profile_path, :method => :get, :class => "btn btn-danger col-md-1 pull-right" %>
      <%= link_to "Add", new_product_path, :method => :get, :class => "btn btn-success col-md-1 pull-right" %>
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Discription</th>
          <th>Price</th>
          <th>Learn more</th>
        </tr>
      </thead>
      <tbody>
        <% if @products %>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td>$ <%= product.price %></td>
            <td>Learn more</td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>