<section class="section-a">
  <div class="container">
    <h1> <i class="fa fa-shopping-cart"></i> My Orders </h1>

    <table class="table table-hover" width="500" border="0" cellpadding="5">
      <col width="100">
      <col width="80">
      <thead>
        <tr>
          <th>Picture</th>
          <th>Name</th>
          <th>Quantity</th>
          <th>Total</th>
          <th>Date</th>
          <th>Learn more</th>
        </tr>
      </thead>
      <tbody>
        <% if @orders %>
          <% @orders.each do |order, product| %>
          <tr>
            <td><%= image_tag product.image.url, :size => "100x60" %></td>
            <td><%= product.name %></td>
            <td><%= order.quantity %></td>
            <td> $ <%= order.total %> </td>
            <td> <%= order.created_at %></td>
            <td> <%= link_to "Details", order_details_path(:id => product.id), :class => "btn btn-warning" %> </td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</section>