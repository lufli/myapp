<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @order do |f| %>
        <div class="form-group">
        <%= f.label @product.name %>
        </div>
        <div class="form-group">
        <%= image_tag @product.image.url %>
        </div>
        <div class="form-group">
        Price: $ <%= @product.price %>
        </div>
        <div class="form-group">
        Quantity: <%= @order.quantity %>
        </div>
        <div class="form-group">
        Total: $ <%= @order.total %>
        </div>
        <div class="form-group">
        Seller Info: <%= @seller.email %>
        </div>
      <% end %>
    </div>
  </div>
</div>